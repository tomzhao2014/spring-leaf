<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tomframework.repository.DepartmentRepository">



    <select id="findAll" resultType="Department" >
        select * department
    </select>

    <select id="getById"  resultType="Department" parameterType="java.lang.Long">
        select * from department where id = ${id}
    </select>

</mapper>