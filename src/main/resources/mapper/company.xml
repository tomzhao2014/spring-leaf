<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qiktone.repository.CompanyRepository">


    <sql id=""></sql>


    <select id="list" resultType="Company" >
        select * from company
        left join constant on
    </select>

    <select id="getById"  resultMap="companyRS" parameterType="java.lang.Long">
        select * from constant where id = ${id}
    </select>


    <resultMap id="companyRS" type="Company">
        <association property="cstate" column="state" select="com.qiktone.repository.ConstantRepository.getByCode"></association>
        <association property="serviceType" column="type" select="com.qiktone.repository.ConstantRepository.getByCode"></association>
        <association property="domain" column="domain_id" select="com.qiktone.repository.DomainRepository.getById"></association>
        <association property="host" column="host_id" select="com.qiktone.repository.HostRepository.getById"></association>
    </resultMap>

</mapper>